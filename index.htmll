<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>THE PROPHECY</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      color: white;
      text-align: center;
      height: 100vh;
      overflow: hidden;
      position: relative;
    }

    body::before {
      content: "";
      background: url("background.gif") no-repeat center center/cover;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: -1;
      opacity: 0.4;
    }

    h1 {
      font-size: 4em;
      margin-top: 1em;
    }

    h2 {
      font-size: 1.5em;
      margin: 0.5em 0;
    }

    #countdown {
      font-size: 2em;
    }

    footer {
      position: absolute;
      bottom: 20px;
      font-size: 0.8em;
      width: 100%;
    }
  </style>
</head>
<body>
  <h1>THE PROPHECY</h1>
  <h2>BEGINS IN...</h2>
  <div id="countdown"></div>
  <footer>&copy; 2025 Ziaire Poochie. All rights reserved.</footer>

  <script>
    const targetDate = new Date("2025-07-26T00:00:00").getTime();
    const countdown = document.getElementById("countdown");

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = targetDate - now;

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      countdown.innerHTML = `${days}d ${hours}h ${minutes}m ${seconds}s`;

      if (distance < 0) {
        countdown.innerHTML = "IT'S TIME.";
      }
    }

    setInterval(updateCountdown, 1000);
  </script>
</body>
</html>
